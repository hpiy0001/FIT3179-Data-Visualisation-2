{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "params": [{
    "name": "qualification_select",
    "value": "Bachelor Degree",
    "bind": {
      "input": "select",
      "options": [
        "Postgraduate Degree",
        "Graduate Diploma/Graduate Certificate",
        "Bachelor Degree",
        "Advanced Diploma/Diploma",
        "Certificate III/IV",
        "Certificate I/II",
        "Certificate n.f.d."
      ],
      "name": "Select Qualification: "
    }
  }],
  "layer": [{
    "data": {
      "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
      "format": {"type": "json", "property": "features"}
    },
    "transform": [
      {
        "lookup": "properties.STATE_NAME",
        "from": {
          "data": {"url": "qualifications_states_ch.csv"},
          "key": "State",
          "fields": ["Qualification", "Count"]
        }
      },
      {
        "filter": "datum.Qualification == qualification_select"
      }
    ],
    "projection": {
      "type": "mercator",
      "center": [133, -28],
      "scale": 800
    },
    "mark": {
      "type": "geoshape",
      "stroke": "white",
      "strokeWidth": 2
    },
    "encoding": {
      "color": {
        "field": "Count",
        "type": "quantitative",
        "scale": {
          "scheme": "blues",
          "domain": [0, 1500]
        },
        "title": "People (thousands)"
      },
      "tooltip": [
        {"field": "properties.STATE_NAME", "title": "State"},
        {"field": "Qualification", "title": "Qualification"},
        {"field": "Count", "title": "Count (thousands)", "format": ".1f"}
      ]
    }
  }]
}