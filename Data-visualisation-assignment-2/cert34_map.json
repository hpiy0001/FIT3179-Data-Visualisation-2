{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "layer": [{
    "data": {
      "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
      "format": {"type": "json", "property": "features"}
    },
    "transform": [
      {
        "lookup": "properties.STATE_NAME",
        "from": {
          "data": {
            "values": [
              {"State": "New South Wales", "Count": 897},
              {"State": "Victoria", "Count": 734.4},
              {"State": "Queensland", "Count": 772.7},
              {"State": "South Australia", "Count": 263.5},
              {"State": "Western Australia", "Count": 383.1},
              {"State": "Tasmania", "Count": 87.2},
              {"State": "Northern Territory", "Count": 28.3},
              {"State": "Australian Capital Territory", "Count": 34.3}
            ]
          },
          "key": "State",
          "fields": ["Count"]
        }
      }
    ],
    "projection": {
      "type": "mercator",
      "center": [133, -28],
      "scale": 800
    },
    "mark": {
      "type": "geoshape",
      "stroke": "white",
      "strokeWidth": 2
    },
    "encoding": {
      "color": {
        "field": "Count",
        "type": "quantitative",
        "scale": {
          "scheme": "blues",
          "domain": [0, 1500]
        },
        "title": "People (thousands)"
      },
      "tooltip": [
        {"field": "properties.STATE_NAME", "title": "State"},
        {"field": "Count", "title": "Certificate III/IV (thousands)", "format": ".1f"}
      ]
    }
  }]
}